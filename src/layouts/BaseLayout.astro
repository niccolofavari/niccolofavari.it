---
// BaseLayout.astro
import '../styles/global.scss'; // Import global SCSS styles
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
	lang?: string;
	translationKey?: string;
}

const { title, description = "Personal Website and Digital Garden", lang = "en", translationKey } = Astro.props;
---
<!doctype html>
<html lang={lang} class="scroll-smooth">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content={description} />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="alternate" type="application/rss+xml" title={title} href={`/${lang}/rss.xml`} />
	<title>{title}</title>
	{/* Add any other global head elements here, like font links if needed */}
</head>
<body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 antialiased flex flex-col min-h-screen">
	<Header lang={lang} currentPath={Astro.url.pathname} translationKey={translationKey} />

	<main id="main-content" class="container mx-auto p-4 flex-grow">
		<slot /> {/* Page content will be injected here */}
	</main>

	<Footer lang={lang} currentPath={Astro.url.pathname} />
	<script is:inline src="/scripts/theme-toggle.js"></script>
	{/* Add any other global scripts here if needed */}
</body>
</html>
