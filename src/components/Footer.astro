  { name: 'GitHub', href: SOCIAL_LINKS.github, icon: GithubIcon, label: lang === 'it' ? 'Profilo GitHub' : 'GitHub Profile' },
  { name: 'Mastodon', href: SOCIAL_LINKS.mastodon, icon: MastodonIcon, label: lang === 'it' ? 'Profilo Mastodon' : 'Mastodon Profile' },
  { name: 'LinkedIn', href: SOCIAL_LINKS.linkedin, icon: LinkedinIcon, label: lang === 'it' ? 'Profilo LinkedIn' : 'LinkedIn Profile' },
  { name: 'Bluesky', href: SOCIAL_LINKS.bluesky, icon: BlueskyIcon, label: lang === 'it' ? 'Profilo Bluesky' : 'Bluesky Profile' },
].filter(item => item.href && item.href !== "YOUR_URL_HERE"); // Filter out unconfigured links

const footerNavLinks = lang === 'it' ? NAV_LINKS_CONFIG.it.filter(l => l.categorySlug !== 'home') : NAV_LINKS_CONFIG.en.filter(l => l.categorySlug !== 'home');
const footerExtraLinks = lang === 'it' ? FOOTER_EXTRA_LINKS.it : FOOTER_EXTRA_LINKS.en;
---
<footer class="bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 mt-16 py-12 px-4">
  <div class="container mx-auto">
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Left Column -->
      <div>
        <h3 class="text-xl font-semibold text-slate-800 dark:text-slate-200 mb-3">
          <a href={`/${lang}/`} class="hover:underline">{siteTitle}</a>
        </h3>
        <p class="text-sm mb-4">{siteDescription}</p>
        
        {socialLinkItems.length > 0 && (
          <div class="flex space-x-4 mb-6">
            {socialLinkItems.map(item => (
              <a href={item.href} target="_blank" rel="noopener noreferrer" aria-label={item.label} title={item.name} class="text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200 transition-colors">
                <Fragment set:html={item.icon} />
              </a>
            ))}
          </div>
        )}

        <div class="text-xs space-y-1">
          <p>&copy; {currentYear} {AUTHOR_NAME}.</p>
          <p>
            <a href={LICENSE_CODE_URL} class="hover:underline">Code License (MIT)</a> | 
            <a href={LICENSE_CONTENT_URL} class="hover:underline">Content License (CC0)</a>
          </p>
        </div>
      </div>

      <!-- Right Column -->
      <div>
        <h4 class="text-lg font-semibold text-slate-800 dark:text-slate-200 mb-3">
          {lang === 'it' ? 'Navigazione' : 'Navigation'}
        </h4>
        <ul class="space-y-2 text-sm">
          {footerNavLinks.map(link => (
            <li><a href={link.href} class="hover:underline">{link.name}</a></li>
          ))}
          {footerExtraLinks.map(link => (
             <li><a href={link.href} class="hover:underline">{link.name}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</footer>
